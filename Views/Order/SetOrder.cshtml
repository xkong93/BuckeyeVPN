                    </ul>
                </div>
                <div class="pricing-action">
                    <a buy="3" class="btn btn-danger" disabled="true"><i class="icon-bolt"></i>Coming Soon</a>
                </div>
            </div>
        </div>
    </div>
</div> 

<script>

    $(".js_buy").click(function () {
        var type = $(this).attr("buy");
 
        $.ajax({
            type: 'POST',
            url: "/Order/Buy",
            data: { type: type },
            //dataType: dataType,
            success: function (res) {
                if (res > 0) {
                    window.location.href = "/Order/OrderSuc/" + res;
                }
                else {
                    alert(res);
                }
            }
        });
    })


</script>
