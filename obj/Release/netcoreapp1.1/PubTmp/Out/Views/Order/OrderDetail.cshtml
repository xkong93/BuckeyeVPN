@{
    ViewData["Title"] = "OrderDetail Page";
}

<div class="container">
    <div class="row">
        <h2>Order Detail</h2>
        <hr />
        <div class="col-md-8">

            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Order Num</label>
                    <div class="col-sm-10">
                        <p class="order-detail-item">CH0000@(Model.id)</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Plan</label>
                    <div class="col-sm-10">
                        <p class="order-detail-item">
                            @if (Model.buy_type == 1)
                            {
                                @Html.Raw("Basic");
                            }
                            else if (Model.buy_type == 2)
                            {
                                @Html.Raw("Standard");
                            }
                            else if (Model.buy_type == 3)
                            {
                                @Html.Raw("Advanced");
                            }
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">VPN Account Number</label>
                    <div class="col-sm-10">
                        <p class="order-detail-item">@(Model.VPNname)</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">VPN Password</label>
                    <div class="col-sm-10">
                        <p class="order-detail-item">@(Model.VPNpwd)</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">IP</label>
                    <div class="col-sm-10">
                        <p class="order-detail-item">192.0.98.3</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Order Time</label>
                    <div class="col-sm-10">
                        <p class="order-detail-item">@(Model.createtime)</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Payment Status</label>
                    <div class="col-sm-10">
                        <p class="order-detail-item">Paid</p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <a href="/Order/OrderList" class="btn btn-danger">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div> 